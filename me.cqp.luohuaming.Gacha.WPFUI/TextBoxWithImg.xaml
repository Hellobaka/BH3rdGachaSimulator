<UserControl x:Class="me.cqp.luohuaming.Gacha.WPFUI.TextBoxWithImg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:me.cqp.luohuaming.Gacha.WPFUI"
             mc:Ignorable="d" d:DesignWidth="660" Height="90">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="136*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="text" Grid.Column="0" TextWrapping="Wrap" TextChanged="TextBox_TextChanged" Margin="0,10"/>
        <Border Grid.Column="1"  BorderBrush="Black" BorderThickness="1" Margin="10,0" Width="90">
            <Image MouseUp="img_MouseUp" x:Name="img" Height="90" Width="90" Canvas.Left="560" Canvas.Top="10" Stretch="UniformToFill" Margin="0"/>
        </Border>
    </Grid>
</UserControl>
